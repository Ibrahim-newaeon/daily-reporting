# GCP Configuration
GCP_PROJECT=your-project-id
GCP_PROJECT_NUMBER=your-number
GCP_SERVICE_ACCOUNT_KEY='{"type":"service_account",...}'
BQ_DATASET=marketing_data
GCS_BUCKET=marketing-reports-bucket
GCS_BUCKET_URL=https://storage.googleapis.com/marketing-reports-bucket

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
FIREBASE_ADMIN_SDK_KEY='{"type":"service_account",...}'

# OAuth Credentials - Google
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth Credentials - Meta
NEXT_PUBLIC_META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret

# OAuth Credentials - LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# OAuth Credentials - TikTok
TIKTOK_APP_ID=your-tiktok-app-id
TIKTOK_APP_SECRET=your-tiktok-app-secret

# OAuth Credentials - Snapchat
SNAP_CLIENT_ID=your-snapchat-client-id
SNAP_CLIENT_SECRET=your-snapchat-client-secret

# GA4 Configuration
GA4_PROPERTY_ID=your-property-id

# Google Ads Configuration
GOOGLE_ADS_CUSTOMER_ID=1234567890
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token

# WhatsApp Configuration
WHATSAPP_PHONE_ID=your-phone-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-verify-token

# App Configuration
# IMPORTANT: Use HTTPS in production! HTTP is only acceptable for local development.
# Development example:
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production example (uncomment and modify):
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
# Production example (uncomment and modify):
# NEXTAUTH_URL=https://yourdomain.com

# Security Configuration
# NEXTAUTH_SECRET: Used for session encryption and OAuth state signing
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# TOKEN_ENCRYPTION_KEY: Used for encrypting OAuth tokens at rest
# Must be exactly 64 hex characters (32 bytes)
# Generate with: openssl rand -hex 32
TOKEN_ENCRYPTION_KEY=your-64-character-hex-key-generate-with-openssl-rand-hex-32
